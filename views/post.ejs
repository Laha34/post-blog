<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/" class="btn btn-outline-secondary">← Назад до всіх постів</a>
            <div class="btn-group">
                <a href="/posts/<%= post._id %>/edit" class="btn btn-outline-warning">Редагувати</a>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Видалити цей пост?')">Видалити</button>
                </form>
            </div>
        </div>

        <article class="card">
            <div class="card-body">
                <h1 class="card-title"><%= post.title %></h1>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-subtitle text-muted">Автор: <%= post.author %></h5>
                    <small class="text-muted">Створено: <%= post.createdAt.toLocaleDateString('uk-UA') %></small>
                </div>
                <div class="card-text">
                    <p style="white-space: pre-wrap;"><%= post.description %></p>
                </div>
            </div>
        </article>
    </div>
</div>

<%- include('partials/footer') %>